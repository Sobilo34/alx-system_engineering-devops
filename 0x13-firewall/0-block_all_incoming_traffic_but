#!/bin/bash                                                                                                                                                                     # Allow SSH                                                                             sudo ufw allow ssh                                                                                                                                                              # Allow SSH (port 22)                                                                   sudo ufw allow 22/tcp                                                                                                                                                           # Allow HTTPS (port 443)                                                                sudo ufw allow 443/tcp                                                                                                                                                          # Allow HTTP (port 80)                                                                  sudo ufw allow 80/tcp                                                                                                                                                           # Enable ufw (to apply the rules)                                                       sudo ufw enable                                                                                                                                                                 # Check the status to verify the rules                                                  sudo ufw status
